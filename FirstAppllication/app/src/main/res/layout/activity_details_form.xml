<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.nirmlkar.dalejan.firstappllication.DetailsForm">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:layout_marginTop="20dp"
            android:id="@+id/imge"
            android:src="@mipmap/incred_round"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name " />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/primary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText

                android:inputType="number"
                android:id="@+id/eprimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Years in primary Education " />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/secondary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="number"
                android:id="@+id/esecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Years in secondary Education " />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/graduation"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="number"
                android:text="0"
                android:id="@+id/egraduation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Years in Graduation " />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/diploma"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="number"
                android:id="@+id/ediploma"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Years in Diploma  " />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/postgr"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="number"
                android:id="@+id/epostgr"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Years in post graduation " />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/phd"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="number"
                android:id="@+id/ephd"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Years in PHD  " />


        </android.support.design.widget.TextInputLayout>



        <Button
            android:text="Submit"
            android:layout_marginTop="10dp"
            android:id="@+id/enteredudetails"
            android:textSize="18sp"
            android:background="@drawable/drawable"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
